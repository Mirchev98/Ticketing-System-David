@model MessageCreateView
@{
    ViewData["Title"] = "Create Project";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Content"></label>
                <input asp-for="Content" class="form-control" placeholder="Content">
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <div class="form-group">
                    <label asp-for="State"></label>
                    <select asp-for="State" class="form-control">
                        <option value="0">Draft</option>
                        <option value="1">Posted</option>
                    </select>
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
