@model TicketCreateView
@{
    ViewData["Title"] = "Create Project";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Heading"></label>
                <input asp-for="Heading" class="form-control" placeholder="Heading">
                <span asp-validation-for="Heading" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Description">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <div class="form-group">
                    <label asp-for="Type"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="0">Bug Report</option>
                        <option value="1">Feature Request</option>
                        <option value="2">Assistance Request</option>
                        <option value="3">Other</option>
                    </select>
                </div>
            </div>
            <div class="form-group col-md-3">
                <div class="form-group">
                    <label asp-for="State"></label>
                    <select asp-for="State" class="form-control">
                        <option value="1">New</option>
                        <option value="2">Work In Progress</option>
                        <option value="3">Finished</option>
                    </select>
                </div>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
