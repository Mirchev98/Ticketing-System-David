@model ProjectDetailsViewModel

@{
    ViewBag.Title = "Project Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Name</u></p>
            <p>@Model.Description</p>
            <p></p>
            <div class="form-inline align-self-center">
                <p text-centre style="font-size:25px;"><u>Reviews</u></p>
                <a class="ml-2 btn btn-info" asp-controller="Ticket" asp-action="Add"
                   asp-route-id="@Model.Id">Create a Ticket</a>
            </div>

            @if (Model.Tickets.Count == 0)
            {
                <p text-centre style="font-size:25px;">No tickets yet!</p>
            }

            @foreach (TicketDetailsViewModel ticket in Model.Tickets)
            {
                <br />
                <div class="form-inline align-self-center card col-8 border-1">
                    <p style="font-size:15px;"><b>@ticket.Heading</b></p>
                    <p>Written by: <b>@ticket.Creator</b></p>
                    <p>Description: <b>@ticket.Description</b></p>
                    <p>Type: <b>@ticket.Type</b></p>
                    <p>State: <b>@ticket.State</b></p>
                    <p>Messages: <b>@ticket.Messages.Count()</b></p>
                    <div class="form-inline align-self-center">
                        <a class="btn btn-danger" asp-controller="Ticket" asp-action="Details"
                           asp-route-id="@ticket.Id">Details</a>
                    </div>
                    @{
                        if (ticket.Creator == User.Identity.Name || User.IsInRole("Admin"))
                        {
                            <div class="form-inline align-self-center">
                                <a class="btn btn-danger" asp-controller="Ticket" asp-action="Remove"
                                   asp-route-id="@ticket.Id" confirm="Are your sure?">Remove</a>
                                <a class="btn btn-danger" asp-controller="Ticket" asp-action="Edit"
                                   asp-route-id="@ticket.Id">Edit</a>
                            </div>
                        }
                    }
                </div>
            }

        </div>
    </div>
</div>
